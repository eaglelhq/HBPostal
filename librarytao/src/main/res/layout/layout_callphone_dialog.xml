<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ic_chat_menu_item_bg_normal"
    android:orientation="vertical"
    android:padding="10dp" >

    <LinearLayout
        android:id="@+id/dialog_call"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/dialog_frame_on_bg"
        android:clickable="true"
        android:gravity="center" >

        <TextView
            android:id="@+id/tv_call"
            style="@style/dialog_bule_font"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="打电话" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/dialog_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/dialog_frame_down_bg"
        android:clickable="true"
        android:gravity="center" >

        <TextView
            android:id="@+id/tv_message"
            style="@style/dialog_bule_font"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="发短信" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/dialog_cancle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/dialog_frame_round_bg"
        android:clickable="true"
        android:gravity="center" >

        <TextView
            style="@style/dialog_bule_font"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="取消" />
    </LinearLayout>

</LinearLayout>