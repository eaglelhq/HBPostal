<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/item_click_selector"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/item_click_selector"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:drawableLeft="@drawable/histroy_icon_time"
            android:drawablePadding="2dp"
            android:paddingLeft="5dp"
            android:text=""
            android:textSize="14dp" />

        <TextView
            android:id="@+id/tv_jinbi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/histroy_icon_gold"
            android:text=""
            android:layout_marginRight="10dp"
            android:textColor="@color/yellow"
            android:textSize="14dp" />
    </LinearLayout>

    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:layout_marginBottom="3dp"
        android:layout_marginTop="2dp"
        android:background="@color/lightgrey" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp" >

        <TextView
            android:id="@+id/tv_huming"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="户名:"
            android:textColor="@color/gary"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/tv_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/tv_huming"
            android:text=""
            android:textColor="@color/gary"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/tv_huhao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_huming"
            android:layout_marginTop="8dp"
            android:text="户号:"
            android:textColor="@color/gary"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/tv_user_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_huming"
            android:layout_marginTop="8dp"
            android:layout_toRightOf="@+id/tv_huhao"
            android:text=""
            android:textColor="@color/gary"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/tv_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginTop="15dp"
            android:drawableRight="@drawable/common_more"
            android:text=""
            android:textColor="@color/black"
            android:textSize="14dp" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="@color/lightgrey" />

</LinearLayout>