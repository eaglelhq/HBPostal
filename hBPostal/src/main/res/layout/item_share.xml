<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:visibility="gone"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tv_qq"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/item_click_selector"
            android:drawableTop="@drawable/life_share_qq"
            android:gravity="center_horizontal"
            android:paddingTop="10dp"
            android:text="QQ"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/tv_space"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/item_click_selector"
            android:drawableTop="@drawable/life_share_space"
            android:gravity="center_horizontal"
            android:paddingTop="10dp"
            android:text="QQ空间"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/tv_wechat"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/item_click_selector"
            android:drawableTop="@drawable/life_share_wechat_43"
            android:gravity="center_horizontal"
            android:paddingTop="10dp"
            android:text="微信好友"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/tv_firend"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/item_click_selector"
            android:drawableTop="@drawable/life_share_wechat"
            android:gravity="center_horizontal"
            android:paddingTop="10dp"
            android:text="朋友圈"
            android:textSize="16dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal"
        android:visibility="gone"
        android:paddingBottom="10dp" >

        <TextView
            android:id="@+id/tv_blog"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/item_click_selector"
            android:drawableTop="@drawable/life_share_blog"
            android:gravity="center_horizontal"
            android:paddingTop="10dp"
            android:text="新浪微博"
            android:textSize="16dp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:paddingTop="10dp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:paddingTop="10dp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:paddingTop="10dp" />
    </LinearLayout>
</LinearLayout>