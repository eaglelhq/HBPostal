<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_goods"
    android:layout_width="fill_parent"
    android:layout_height="120dp"
    android:background="@color/white"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/iv_goods_icon"
        android:layout_width="0dp"
        android:layout_height="120dp"
        android:layout_weight="1"
        android:layout_marginTop="5dp"
        android:scaleType="centerCrop"
        android:background="@color/lightgrey" />

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:padding="8dp" >

        <TextView
            android:id="@+id/tv_name_list_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="3dp"
            android:singleLine="true"
            android:text=""
            android:textColor="@color/lightblack"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/tv_cate_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_name_list_item"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:text=""
            android:textColor="@color/gary"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/tv_goods_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/tv_cate_name"
            android:layout_marginRight="15dp"
            android:text=""
            android:textColor="@color/gary"
            android:textSize="12dp" />

        <LinearLayout
            android:id="@+id/ll_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_cate_name"
            android:layout_marginLeft="5dp"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tv_goods_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/orange"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/tv_add"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" + "
                android:textColor="@color/gary"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/tv_goods_jifen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/orange"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/tv_jifen_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="积分"
                android:textColor="@color/gary"
                android:textSize="12dp" />
        </LinearLayout>
            <TextView
                android:id="@+id/tv_review_state"
                android:layout_width="60dp"
                android:layout_height="25dp"
                android:text="已评价"
                android:visibility="gone"
                android:gravity="center"
                android:layout_margin="5dp"
                android:background="@drawable/rect_yellow_bk"
                android:layout_alignParentRight="true"
                android:textColor="@color/orange"
                android:layout_below="@+id/ll_price"
                android:textSize="12dp" />
    </RelativeLayout>

</LinearLayout>