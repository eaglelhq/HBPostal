<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:zhy="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rl_goods"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/tv_order_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_size_14"
        android:text="订单号：DD-4545454"
        android:padding="@dimen/x5"
        android:layout_margin="@dimen/x5"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        />
    <TextView
        android:id="@+id/tv_order_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_size_14"
        android:text="未完成：10/15"
        android:padding="@dimen/x5"
        android:layout_margin="@dimen/x5"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/lightgrey"
        android:layout_below="@+id/tv_order_name"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_goods_icon"
            android:layout_width="@dimen/y90"
            android:layout_height="@dimen/y90"
            android:scaleType="centerCrop" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:padding="8dp">

            <TextView
                android:id="@+id/tv_goods_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x5"
                android:lines="1"
                android:text="最新三人宅配卡"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_16" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/x2"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/x5"
                    android:textSize="@dimen/text_size_14"
                    android:text="周期："/>
                <TextView
                    android:id="@+id/tv_zhouqi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/x3"
                    android:textSize="@dimen/text_size_14"
                    android:text="年"
                    android:background="@drawable/rect_gary_bk"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/x5"
                    android:textSize="@dimen/text_size_14"
                    android:text="人数："/>
                <TextView
                    android:id="@+id/tv_renshu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/x3"
                    android:textSize="@dimen/text_size_14"
                    android:text="3人"
                    android:background="@drawable/rect_gary_bk"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/x2">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/x5"
                    android:textSize="@dimen/text_size_14"
                    android:text="配送时间："/>
                <com.zhy.view.flowlayout.TagFlowLayout
                    android:id="@+id/fl_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    zhy:max_select="1"/>
                <TextView
                    android:id="@+id/tv_time1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/x3"
                    android:textSize="@dimen/text_size_14"
                    android:text="暂无"
                    />
                <TextView
                    android:id="@+id/tv_time2"
                    android:layout_marginLeft="@dimen/x5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/x3"
                    android:textSize="@dimen/text_size_14"
                    android:text="周五"
                    android:background="@drawable/rect_gary_bk"/>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

                <TextView
                    android:id="@+id/tv_price"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/x5"
                    android:text="￥5555"
                    android:textSize="@dimen/text_size_14"
                    android:textColor="@color/red"/>
                <TextView
                    android:id="@+id/ll_pay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rect_orange_bk"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_14"
                    android:padding="@dimen/x5"
                    android:layout_marginRight="@dimen/x20"
                    android:text="已付款"
                    />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
</RelativeLayout>