<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/item_click_selector"
     >

    <TextView
        android:id="@+id/tv_user_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:text="asdasd"
        android:padding="10dp"
        android:textColor="@color/gary"
        android:textSize="14dp" />

    <TextView
        android:id="@+id/tv_user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text="asdasd"
        android:paddingLeft="15dp"
        android:paddingTop="10dp"
        android:textColor="@color/gary"
        android:textSize="14dp" />

    <TextView
        android:id="@+id/tv_user_addr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tv_user_name"
        android:layout_below="@+id/tv_user_name"
        android:layout_marginTop="5dp"
        android:padding="15dp"
        android:text="123123"
        android:textColor="@color/gary"
        android:textSize="14dp" />

    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:layout_below="@+id/tv_user_addr"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@color/lightgrey" />

    <TextView
        android:id="@+id/cb_is_default"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/line"
        android:drawableLeft="@drawable/check_btn_selcet"
        android:drawablePadding="5dp"
        android:gravity="center_vertical"
        android:paddingLeft="15dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:text="默认地址"
        android:textColor="@color/gary"
        android:textSize="12dp" />

    <TextView
        android:id="@+id/tv_del"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/line"
        android:layout_marginTop="3dp"
        android:layout_marginRight="10dp"
        android:layout_toLeftOf="@+id/tv_edit"
        android:drawableLeft="@drawable/common_icon_del"
        android:gravity="center_vertical"
        android:text="删除"
        android:paddingLeft="10dp"
        android:textColor="@color/gary"
        android:textSize="12dp" />

    <TextView
        android:id="@+id/tv_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/line"
        android:layout_marginTop="3dp"
        android:drawableLeft="@drawable/common_icon_edit"
        android:gravity="center_vertical"
        android:text="编辑"
        android:paddingRight="10dp"
        android:textColor="@color/gary"
        android:textSize="12dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:layout_alignParentBottom="true"
        android:background="@color/lightgray" />

</RelativeLayout>